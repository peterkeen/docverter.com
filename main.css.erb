body {
  padding-top: 60px;
  padding-bottom: 40px;
}
.hero-unit {
  background-image: url("<%= static_path '/document-open.png' %>");
  background-repeat: no-repeat;
  background-size: 300px;
  background-position: 42em;
}
.hero-unit p {
  width: 30em;
}

.hero-small {
  background-size: 150px;
  background-position: 52em;
}

code {
  color: black;
}

td.featured, th.featured {
  background-color: #FCF6CF;
}
.table-striped tbody tr:nth-child(odd) td.featured,
  .table-striped tbody tr:nth-child(odd) th.featured {
  background-color: #F1EDC2;
}
.toc {
  background-color: #F7F7F7;
  border: 1px solid #ddd;
  padding: 5px 10px;
  margin: 0;
  border-radius: 3px;
}
